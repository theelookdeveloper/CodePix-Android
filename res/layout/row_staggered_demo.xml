<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.codepix.views.ScaleImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@null" />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_gravity="bottom" 
        android:layout_margin="3dp"
        android:id="@+id/linearLayout1" 
        android:alpha="0.85" android:background="#765AE6">
        <ImageView android:layout_width="50dp" android:id="@+id/imageProfile"
                   android:layout_height="50dp"
                   android:src="@drawable/default_profile"/>
        <TextView  android:layout_width="wrap_content" android:id="@+id/textViewName"
                   android:layout_height="wrap_content"
                    android:textColor="@android:color/white"/>
            
        </LinearLayout> 

</FrameLayout>